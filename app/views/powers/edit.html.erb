<h1>Update a Power!!</h1>

<%= form_for @power do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.label "Heroine(s)" %>
  <%= f.collection_check_boxes :heroine_ids, Heroine.all, :id, :name %>
  <br>

  <%= f.submit "Update Power" %>
<% end %>