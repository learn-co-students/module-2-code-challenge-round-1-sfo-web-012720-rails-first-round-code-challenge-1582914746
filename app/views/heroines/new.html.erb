<h1>Create a Heroine!!</h1>

<% if @heroine.errors.any? %>
  <% @heroine.errors.full_messages.each do |err| %>
    <li><%= err %></li>
    <% end %>
    <% end %>

<%= form_for @heroine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :super_name %>
  <%= f.text_field :super_name %>
  <br>
  <br>
  <%= f.label "Power(s)" %>
  <%= f.collection_check_boxes :power_ids, Power.all, :id, :name %>
  <br>
  <br>
  <br>
  <br>
  <%= f.submit "Create!" %>
<% end %>