<h1>Create A Heroine Page</h1>

<%= form_for @heroine do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>

    <%= f.label :super_name %>
    <%= f.text_field :super_name %><br><br>

    <!-- where you getting it, where it goes,  -->
    <%= fields_for :heroine_power do |inner| %>
        <%= inner.collection_select :power, :power_id, Power.all, :power_name %>
    <% end %>
    <%# f.collection_select :power, :power_id, Power.all, :power_name %>

    <%= f.submit "Create Heroine" %>

<% end %>